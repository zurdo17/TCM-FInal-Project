import time
import csv
import pandas as pd
import random


csv_file = "question_data.csv"
df = pd.read_csv(csv_file, names=["College", "Question"])
modified_df = df.dropna()
df_question = modified_df.groupby("College")["Question"]


def Grouping():
    print(
        """These are the Schools of Medicine we cover
and the amount of questions available for each..."""
    )
    time.sleep(3)
    print(df_question.count())


def Schools():
    print("How many questions would you like?")
    number = int(input())
    for College, frame in df_question:
        print(f"Here are the questions for {College!r}")
        print(frame.sample(n=number, random_state=2))


Grouping()
time.sleep(5)
Schools()
