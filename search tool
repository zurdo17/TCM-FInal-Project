import time
import csv
import pandas as pd

csv_file = "question_data.csv"
df = pd.read_csv(csv_file, na_values="None")
df_updated = df.to_csv(csv_file, header=["College", "Question"], index=False)


def Introduction():
    print(
        """Hello...
    I see that you are preparing for your Med School Interviews.
    What specific School of Medicine are you interested?"""
    )
    time.sleep(4)


def School_selection():
    print("Please type below the school you are interested in")
    school_question = input()
    if school_question == df_updated['College']
        print (df_updated[df_updated.Question==school_question])
    break

Introduction()
School_selection()
